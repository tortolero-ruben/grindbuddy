{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "provider": "node",
  "steps": {
    "install": {
      "commands": [
        "pnpm install --ignore-scripts=false"
      ],
      "caches": ["pnpm"]
    },
    "build": {
      "inputs": [{"step": "install"}],
      "commands": [
        "pnpm run build"
      ],
      "deployOutputs": [{"include": [".svelte-kit/**"]}]
    }
  },
  "deploy": {
    "inputs": [{"step": "build"}],
    "startCommand": "node .svelte-kit/output/server/index.js"
  },
  "caches": {
    "pnpm": {
      "directory": "/root/.local/share/pnpm/store",
      "type": "shared"
    }
  }
}
